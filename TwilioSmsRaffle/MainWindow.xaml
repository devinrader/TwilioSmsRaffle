<Window x:Class="TwilioSmsRaffle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        
        <Viewbox Grid.Row="0">
            <Label x:Name="lblName" Content="[Your Name Here]" HorizontalContentAlignment="Center"/>
        </Viewbox>
        <Label Grid.Row="1" x:Name="lblFrom" Content="[From]" HorizontalAlignment="Stretch" Margin="10,10,10,0" VerticalAlignment="Top" HorizontalContentAlignment="Center"/>
        <Button Grid.Row="2" Content="Pick A Winner" HorizontalAlignment="Center" VerticalAlignment="Center" Width="175" Height="50" FontSize="25" Margin="0,0,0,10" Click="Button_Click"/>
    </Grid>
</Window>
